{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Format",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "fmt",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Lint",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "lint",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Build (Windows)",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "pd2mm-windows",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
    ]
}